<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="22.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sponsorships.controllers.MenuController">
   <children>
      <MenuBar layoutY="1.0" prefHeight="26.0" prefWidth="950.0">
        <menus>
          <Menu mnemonicParsing="false" text="Sponsorships">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#openStatisticsScreen" text="Statistics" />
                  <MenuItem mnemonicParsing="false" text="Details" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit sponsorships">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#openSponsorsScreen" text="Sponsors" />
                  <MenuItem mnemonicParsing="false" onAction="#openProgramsScreen" text="Programs" />
            </items>
          </Menu>
            <Menu fx:id="adminMenu" mnemonicParsing="false" text="Admin">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#openChangesScreen" text="Changes" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="App">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#logout" text="Sign out" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
